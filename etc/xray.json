{
    "dns": {
        "servers": [
            "https+local://8.8.8.8/dns-query",
            "https+local://8.8.4.4/dns-query"
        ]
    },
    "inbounds": [
        {
            "listen": "/etc/caddy/vmess",
            "protocol": "vmess",
            "settings": {
                "clients": [
                    {
                        "id": "$AUUID"
                    }
                ]
            },
            "streamSettings": {
                "network": "ws",
                "wsSettings": {
                    "path": "/$AUUID-vmess"
                }
            }
        },
        {
            "listen": "/etc/caddy/vless",
            "protocol": "vless",
            "settings": {
                "clients": [
                    {
                        "id": "$AUUID"
                    }
                ],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "ws",
                "wsSettings": {
                    "path": "/$AUUID-vless"
                }
            }
        }
    ],
    "log": {
        "loglevel": "none"
    },
    "outbounds": [
        {
            "protocol": "freedom",
            "settings": {
                "domainStrategy": "UseIP"
            },
            "tag": "direct"
        },
        {
            "protocol": "blackhole",
            "settings": {
            },
            "tag": "blocked"
        }
    ],
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "domain": [
                    "geosite:category-ads-all",
                    "geosite:private"
                ],
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "blocked",
                "type": "field"
            }
        ]
    }
}
